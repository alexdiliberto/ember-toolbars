<div class="cst-page-header">
  {{#from-elsewhere name="cst-top" as |top|}}
    {{#liquid-bind top rules=topRules growDuration=animationDuration growPixelsPerSecond=1 as |currentTop|}}
      {{component currentTop}}
    {{/liquid-bind}}
  {{/from-elsewhere}}
</div>

<div class="cst-page-wrapper">

  <div class="cst-page-gap">
  {{#from-elsewhere name="cst-left" as |left|}}
    {{#liquid-bind left rules=leftRules growDuration=animationDuration growPixelsPerSecond=1 as |currentLeft|}}
      {{component currentLeft}}
    {{/liquid-bind}}
  {{/from-elsewhere}}
  </div>

  <div class="cst-page-main">
    {{yield}}
  </div>

  <div class="cst-page-gap">
  {{#from-elsewhere name="cst-right" as |right|}}
    {{#liquid-bind right rules=rightRules growDuration=animationDuration growPixelsPerSecond=1 as |currentRight|}}
      {{component currentRight}}
    {{/liquid-bind}}
  {{/from-elsewhere}}
  </div>
</div>

<div class="cst-page-footer">
  {{#from-elsewhere name="cst-bottom" as |top|}}
    {{#liquid-bind top rules=bottomRules growDuration=animationDuration growPixelsPerSecond=1 as |currentBottom|}}
      {{component currentBottom}}
    {{/liquid-bind}}
  {{/from-elsewhere}}
</div>